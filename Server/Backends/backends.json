{
    "backends": [
        {
            "id": "alloyIG", 
            "label": "ClaferIG - Alloy Instance Generator", 
            "tooltip": "Classic IG based on Alloy solver",
            "accepted_format": "clafer_source",               
            "tool": "claferIG", 
            "tool_args": ["$filepath$"],
            "scope_options": {
                "global_scope" : {"command": "setscope $value$\n"}, 
                "int_scope" : {"command": "intScope $low$ $high$\n"},                 
                "individual_scope": {"command": "setscope $clafer$ $value$\n"} 
            },
            "control_buttons": [
                {"id": "next_instance", "command": "\n", "label" : "Next", "tooltip": "Next Instance"}, 
                {"id": "reload", "command": "r\n", "label" : "Reload", "tooltip": "Reload the model"}, 
                {"id": "alloy_model", "command": "alloyModel\n", "label" : "Alloy Model", "tooltip": "Print the Alloy model along with the scopes"},                
                {"id": "quit", "command": "q\n", "label" : "Quit", "tooltip": "Exit the IG safely"}                
            ]            
        }, 
        {
            "id": "chocoIG", 
            "label": "Choco Instance Generator",
            "tooltip": "IG based on Choco solver library",
            "accepted_format": "choco",             
            "tool": "java",
            "tool_args": ["-jar", "$dirname$/ChocoIG/claferchocoig-0.0.1-SNAPSHOT-jar-with-dependencies.jar", "$filepath$"],            
            "scope_options": {
                "global_scope" : {"command": "globalScope $value$\n"}, 
                "int_scope" : {"command": "intScope $low$ $high$\n"},                 
                "individual_scope": {"command": "individualScope $clafer$ $value$\n"}, 
                "clafer_scope_list" : {"command": "list\n"}
            },
            "control_buttons": [
                {"id": "next", "command": "n\n", "label" : "Next", "tooltip": "Next Instance"}, 
                {"id": "reload", "command": "r\n", "label" : "Reload", "tooltip": "Reload the model"}, 
                {"id": "min_unsat", "command": "minUnsat\n", "label" : "Min UNSAT", "tooltip": "Print minUNSAT when the model is unsatisfiable"},
                {"id": "quit", "command": "q\n", "label" : "Quit", "tooltip": "Exit the IG safely"}
            ]            
        }
    ]   
}