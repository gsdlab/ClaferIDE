{
    "backends": [
        {
            "id": "alloyIG", 
            "label": "ClaferIG - Alloy Instance Generator", 
            "accepted_format": "clafer_source",               
            "tool": "claferIG", 
            "tool_args": ["$filepath$"],
            "scope_options": [
                {"id": "global_scope", "command": "setscope $value$\n"}, 
                {"id": "clafer_scope", "command": "setscope $clafer$ $value$\n"} 
            ],
            "control_buttons": [
                {"id": "next_instance", "command": "\n", "label" : "Next"}, 
                {"id": "reload", "command": "r\n", "label" : "Reload"}, 
                {"id": "unsat_core", "command": "unsatCore\n", "label" : "UNSAT Core"},
                {"id": "alloy_model", "command": "alloyModel\n", "label" : "Alloy Model"},                
                {"id": "quit", "command": "q\n", "label" : "Safe Exit"}                
            ]            
        }, 
        {
            "id": "chocoIG", 
            "label": "Choco Instance Generator",
            "accepted_format": "choco",             
            "tool": "java",
            "tool_args": ["-jar", "$dirname$/ChocoIG/claferchocoig-0.0.1-SNAPSHOT-jar-with-dependencies.jar", "$filepath$"],            
            "scope_options": [
                {"id": "global_scope", "command": "setscope $value$\n"}, 
                {"id": "clafer_scope", "command": "setscope $clafer$ $value$\n"} 
            ],
            "control_buttons": [
                {"id": "next_instance", "command": "\n", "label" : "Next"}, 
                {"id": "reload", "command": "r\n", "label" : "Reload"}, 
                {"id": "min_unsat", "command": "minUnsat\n", "label" : "Min UNSAT"}
            ]            
        }
    ]   
}